#!/bin/sh

export USER=crio
export GROUP=kubernetes

addgroup -S $GROUP 2>/dev/null
adduser -S -D -H -s /sbin/nologin -G $GROUP -g $USER $USER 2>/dev/null

mkdir -p /usr/share/containers/oci/hooks.d
mkdir -p /etc/containers/oci/hooks.d
mkdir -p /var/lib/containers/storage

chown $USER:$GROUP /usr/share/containers/oci/hooks.d
chown $USER:$GROUP /etc/containers/oci/hooks.d
chown -R $USER:$GROUP /var/run/crio
chown -R $USER:$GROUP /var/run/containers

exit 0